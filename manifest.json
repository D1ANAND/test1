{
    "manifest_version": 3,
    "name": "Akash Network Chat",
    "version": "1.0",
    "description": "A chatbot interface themed around Akash Network with premium rewards",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://chatapi.akash.network/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }